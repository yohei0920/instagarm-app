<div class="profile-wrap">
  <div class="row">
    <div class="col-md-4 text-center">
      <%= image_tag avatar_url(@user), class: "round-img" %>
    </div>
    <div class="col-md-8">
      <div>
        <div id="row">
          <span><h1><%= @user.username %></h1></span>
          <%= link_to "プロフィールを編集", edit_user_registration_path, class: "btn btn-outline-dark common-btn edit-profile-btn" %>
          <%= link_to "サインアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-dark common-btn edit-profile-btn" %>
        </div>
        <div class="list-group text-center">
        </div>
      </div>
      <div class="row">
        <p>
          <%= @user.name %>
        </p>
      </div>
    </div>
  </div>
</div>
